<section class="product-metafields">
  <div class="product-attributes">
    <ul>
      <li>
        <strong>{{ settings.product_width_label }}</strong>: {{ product.metafields.nhc_specs.product_width }}
      </li>
      <li>
        <strong>{{ settings.fuel_type_label }}</strong>: {{ product.metafields.nhc_specs.fuel_type }}
      </li>
      <li>
        <strong>{{ settings.btu_label }}</strong>: {{ product.metafields.nhc_specs.btu }}
      </li>
      <li>
        <strong>{{ settings.warranty_label }}</strong>: {{ product.metafields.nhc_specs.warranty }}
      </li>
      <li>
        <strong>{{ settings.viewing_height_label }}</strong>: {{ product.metafields.nhc_specs.viewing_height }}
      </li>
      <li>
        <strong>{{ settings.viewing_width_label }}</strong>: {{ product.metafields.nhc_specs.viewing_width }}
      </li>
      <li>
        <strong>{{ settings.product_height_label }}</strong>: {{ product.metafields.nhc_specs.product_height }}
      </li>
      <li>
        <strong>{{ settings.product_depth_label }}</strong>: {{ product.metafields.nhc_specs.product_depth }}
      </li>
      <li>
        <strong>{{ settings.manuals_label }}</strong>: {{ product.metafields.nhc_specs.manuals }}
      </li>
      <li>
        <strong>{{ settings.parent_collection_label }}</strong>: {{ product.metafields.nhc.parent_collection }}
      </li>
      <li>
        <strong>{{ settings.parent_category_label }}</strong>: {{ product.metafields.nhc.parent_category }}
      </li>
      <li>
        <strong>{{ settings.product_features_label }}</strong>: {{ product.metafields.nhc.product_features }}
      </li>
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Product Metafields",
  "settings": [
    {
      "type": "text",
      "id": "product_width_label",
      "label": "Product Width Label",
      "default": "Product Width"
    },
    {
      "type": "select",
      "id": "fuel_type_label",
      "label": "Fuel Type Label",
      "default": "Electric",
      "options": [
        {
          "value": "Electric",
          "label": "Electric"
        },
        {
          "value": "Gas",
          "label": "Gas"
        },
        {
          "value": "Wood",
          "label": "Wood"
        }
      ]
    },
    {
      "type": "text",
      "id": "btu_label",
      "label": "BTU Label",
      "default": "BTU"
    },
    {
      "type": "select",
      "id": "warranty_label",
      "label": "Warranty Label",
      "default": "1 Year",
      "options": [
        {
          "value": "1 Year",
          "label": "1 Year"
        },
        {
          "value": "2 Years",
          "label": "2 Years"
        },
        {
          "value": "5 Years",
          "label": "5 Years"
        }
      ]
    },
    {
      "type": "text",
      "id": "viewing_height_label",
      "label": "Viewing Height Label",
      "default": "Viewing Height"
    },
    {
      "type": "text",
      "id": "viewing_width_label",
      "label": "Viewing Width Label",
      "default": "Viewing Width"
    },
    {
      "type": "text",
      "id": "product_height_label",
      "label": "Product Height Label",
      "default": "Product Height"
    },
    {
      "type": "text",
      "id": "product_depth_label",
      "label": "Product Depth Label",
      "default": "Product Depth"
    },
    {
      "type": "text",
      "id": "manuals_label",
      "label": "Manuals Label",
      "default": "Manuals"
    },
    {
      "type": "text",
      "id": "parent_collection_label",
      "label": "Parent Collection Label",
      "default": "Parent Collection"
    },
    {
      "type": "text",
      "id": "parent_category_label",
      "label": "Parent Category Label",
      "default": "Parent Category"
    },
    {
      "type": "text",
      "id": "product_features_label",
      "label": "Product Features Label",
      "default": "Product Features"
    }
  ]
}
{% endschema %}
